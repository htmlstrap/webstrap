.hero-unit
	background: thistle url('../img/hero.png') right repeat;
	color #fff
	text-shadow 0 2px 0 #111
	border-radius 0
	margin-bottom 0
	h1
		color #F16529

.btn-info a
	color #fff

label
	letter-spacing 1px
	font-size 15px

.social
	background #f5f5f5
	padding 5px
	text-align center

.container
	ul 
		margin: 0
		padding: 0
	ul li 
		list-style: none
		padding: 4px
		margin: 0
		position relative
		border-bottom 3px solid #fff
		.label
			margin-left 5px
		&:hover, label:hover
			background #F16529
			cursor pointer
			color #fff
		&:hover
			border-bottom 3px solid #D45924
		span[contentEditable]
			display inline-block
			width 60%
		ul li:before
			font-family 'FontAwesome'
			content '\f0da'
			margin-left 2px
			opacity .5
	input[type='checkbox']
		float: left
		margin-right: .5em
		&:checked ~ .hide
			display block
		&:checked ~ label span
			display none

ul.folder-structure
	li
		border none
		&:hover
			color #1b1b1b
			background none
			border none

.extra
	position absolute
	top 0
	right 0
	border-radius 5px

.icon-github, .icon-twitter
	font-size 18px
	margin-right 5px

.btn-large 
	width 97%
	font-size 40px

.bolt
	color #F16529
	font-size 40px
.about
	background #ddd
	border-top:1px solid rgba(0,0,0,.3)
	box-shadow inset 0 10px 10px rgba(0,0,0,.2)
	padding 30px 0

.spacing30
	margin-top 30px

.spacing20
	margin-top 10px;

.tools
	background #f8b599
	border-top:1px solid rgba(0,0,0,.3)
	box-shadow inset 0 10px 10px rgba(0,0,0,.2)
	min-height 130px
	padding 30px 0

.scroll
	margin-top 25px
	overflow scroll
	height 500px
	background -webkit-linear-gradient(white 20%, rgba(255,255,255,.5)),-webkit-radial-gradient(top, rgba(0,0,0,.5), transparent 70%), -webkit-radial-gradient(bottom,rgba(0,0,0,.3), transparent 75%), -webkit-linear-gradient(rgba(255,255,255,.5), white);
	background-size: 100% 40px, 100% 15px, 100% 15px, 100% 40px
	background-repeat no-repeat
	background-attachment local, scroll, scroll, local
	background-position 0 0, 0 0, 25% 100%, 0 100%
	border-bottom: 1px solid rgba(0,0,0,.2);