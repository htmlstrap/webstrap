.hero-unit
	background: thistle url('../img/hero.png') right repeat;
	color #fff
	text-shadow 0 2px 0 #111
	border-radius 0
	margin-bottom 0
	h1
		color #F16529

.btn-info a
	color #fff

label
	letter-spacing 1px
	font-size 15px

.social
	background #f5f5f5
	padding 5px
	text-align center

.container
	ul 
		margin: 0
		padding: 0
	ul li 
		list-style: none
		padding: 4px
		margin: 0
		position relative
		border-bottom 3px solid #fff
		.label
			margin-left 5px
		&:hover, label:hover
			background #F16529
			cursor pointer
			color #fff
		&:hover
			border-bottom 3px solid #D45924
		span[contentEditable]
			display inline-block
			width 60%
		ul li:before
			content '|-'
	input[type='checkbox']
		float: left
		margin-right: .5em
		&:checked ~ .hide
			display block
		&:checked ~ label span
			display none

ul.folder-structure
	li
		border none
		&:hover
			color #1b1b1b
			background none
			border none

.extra
	position absolute
	top 0
	right 0
	border-radius 5px

.icon-github
	width: 14px;
	height: 15px;
	margin -2px 4px 0 0;
	vertical-align: middle;
	background: url(../img/github-icons.png) no-repeat 0 0;

.btn-large 
	width 97%
	font-size 40px

.about
	margin-top 100px
	background #ddd
	box-shadow inset 0 10px 10px #ccc

.spacing30
	margin-top 30px

.spacing20
	margin-top 10px;