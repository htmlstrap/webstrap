.hero-unit
	background: thistle url('../img/hero.png') right repeat;
	color #fff
	text-shadow 0 2px 0 #111
	border-radius 0
	margin-bottom 0

.btn-info a
	color #fff

label
	width: auto

.extend-y
	background #f5f5f5
	padding 5px
	text-align center

.container
	ul 
		margin: 0
		padding: 0
	ul li 
		list-style: none
		width: 280px
		background: #eee
		padding: 5px
		margin: 5px
		border-radius: 5px
		position relative
		.label
			margin-left 5px
		&:hover, label:hover
			background: #ddd
			cursor: pointer
	input[type='checkbox']
		float: left
		margin-right: .5em
		~ p 
			display none
		&:checked ~ p, &:checked ~ .extra
			display block
.extra
	position absolute
	top 0
	right 0
	border-radius 0 5px 0 0
	display none